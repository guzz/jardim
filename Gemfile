source 'https://rubygems.org'

gem 'rails', '3.2.3'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

group :development, :test do
	gem 'sqlite3'
	gem 'rspec-rails'
	gem 'haml-rails'
end

# Gems used only for assets and not required
# in production environments by default.

group :assets do
	gem 'haml'
	gem 'sass-rails'
	gem 'coffee-rails'
	gem 'uglifier'
end

gem 'jquery-rails'

group :test do
	gem 'capybara', '1.1.2'
end

group :production do
	gem 'pg', '0.12.2'
end